{
    "env": {
        "browser": true,
        "commonjs": true,
        "jasmine": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
